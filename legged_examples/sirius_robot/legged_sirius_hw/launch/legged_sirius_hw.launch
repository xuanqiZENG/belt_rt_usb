<launch>
    <arg name="robot_type" default="sirius_belt" doc="Robot type: [sirius_mini,sirius_belt]"/>

    <param name="legged_robot_description" command="cat $(find sirius_belt)/urdf/sirius_belt.urdf"/>

    <rosparam file="$(find legged_sirius_hw)/config/$(arg robot_type).yaml" command="load"/>

    <param name="robot_type" value="$(arg robot_type)"/>
    <node name="legged_sirius_hw" pkg="legged_sirius_hw" type="legged_sirius_hw" respawn="false"
          clear_params="true" output="screen"/>

</launch>
